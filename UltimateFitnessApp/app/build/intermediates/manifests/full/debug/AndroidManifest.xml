<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ultimatefitnessapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ultimatefitnessapp.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ultimatefitnessapp.FormActivity"
            android:label="@string/title_activity_form" >
            <intent-filter>
                <action android:name="com.example.ultimatefitnessapp.FormActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ultimatefitnessapp.OptionActivity"
            android:label="@string/title_activity_option" >
            <intent-filter>
                <action android:name="com.example.ultimatefitnessapp.OptionActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ultimatefitnessapp.BMIActivity"
            android:label="@string/title_activity_bmi" >
            <intent-filter>
                <action android:name="com.example.ultimatefitnessapp.BMIActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ultimatefitnessapp.BFPActivity"
            android:label="@string/title_activity_bfp" >
        </activity>
        <activity
            android:name="com.example.ultimatefitnessapp.BMIFormActivity"
            android:label="@string/title_activity_bmiform" >
        </activity>
    </application>

</manifest>